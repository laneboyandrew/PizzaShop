<h2> Welcome to Pizza Shop! </h2>

<div class="row">



  <% @products.each do |p|%>
    <div class="col-md-3">
      <%= p.title %>
    <br/>
      <img src="<%= p.path_to_image %>">
      <br/>
      <%= p.description %>
      <br/>
      <%= p.price %> rub
      <br/>
      <%= p.size %> sm
    <br/>

      <button type="button" class="btn btn-primary">Добавить в корзину</button>



    </div>
    <% end %>

</div>







